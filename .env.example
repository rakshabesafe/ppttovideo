# PPT to Video Generator Environment Configuration

# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=presentation_gen_db

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# GPU Configuration (auto-detected by setup script)
# Set GPU_RUNTIME to 'nvidia' to enable GPU support, 'runc' for CPU-only
GPU_RUNTIME=runc
GPU_COUNT=1

# NVIDIA GPU Environment Variables (auto-configured)
# NVIDIA_VISIBLE_DEVICES=all
# NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Storage Volumes
PPT_OUTPUT_VOLUME=./data/output
PPT_SLIDES_VOLUME=./data/slides

# TTS (Text-to-Speech) Configuration
# TTS Engine Selection (options: 'melotts' (default), 'neuphonic', 'fishspeech')
TTS_ENGINE=melotts
# Neuphonic Configuration (for TTS_ENGINE='neuphonic')
NEUPHONIC_BACKBONE_REPO=neuphonic/neutts-air
NEUPHONIC_CODEC_REPO=neuphonic/neucodec
NEUPHONIC_BACKBONE_DEVICE=cpu
NEUPHONIC_CODEC_DEVICE=cpu
NEUPHONIC_REF_AUDIO=app/services/tts/data/default_ref.wav
NEUPHONIC_REF_TEXT=app/services/tts/data/default_ref.txt
# Fish Speech Configuration (for TTS_ENGINE='fishspeech')
FISH_AUDIO_API_KEY=

# Timeout settings for GPU audio synthesis tasks (in seconds)
TTS_SOFT_TIME_LIMIT=300    # Soft timeout - triggers fallback (5 minutes)
TTS_HARD_TIME_LIMIT=360    # Hard timeout - kills task (6 minutes)

# Worker GPU Caches
WORKER_GPU_NLTK_DATA=./data/nltk_data
WORKER_GPU_HF_CACHE=./data/huggingface_cache
WORKER_GPU_OPENVOKE_REPO=./data/OpenVoice
WORKER_GPU_OPENVOKE_CHECKPOINTS=./data/checkpoints_v2

# LibreOffice Temporary Files
LIBREOFFICE_TMP_VOLUME=./data/libreoffice_tmp
